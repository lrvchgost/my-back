{
  "request": {
    "method": "POST",
    "url": "/v2/storage/create"
  },

  "response": {
    "status": 200,
    "jsonBody": {
      "responseType": "create",
      "result": "success",
      "storage": {
        "id": "123",
        "title": "{{{jsonPath request.body '$.storage.title'}}}",
        "description": "{{{jsonPath request.body '$.storage.description'}}}",
        "capacity": "{{{jsonPath request.body '$.storage.capacity'}}}",
        "availability": "{{{jsonPath request.body '$.storage.availability'}}}",
        "paymentType": "{{{jsonPath request.body '$.storage.paymentType'}}}",
        "readSpeed": "{{{jsonPath request.body '$.storage.readSpeed'}}}",
        "writeSpeed": "{{{jsonPath request.body '$.storage.writeSpeed'}}}",
        "lock": "123",
        "permissions": ["create"],
        "enableOptimize": "{{{jsonPath request.body '$.storage.enableOptimize'}}}"
      }
    },
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": ["response-template"]
  }
}
